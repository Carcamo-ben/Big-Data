ssh root@dist20.inf.santiago.usm.cl #Ip address 10.6.40.160

#To connect to worker nodes, ssh like so:

ssh root@dist16.inf.santiago.usm.cl #Ip address 10.6.40.156
ssh root@dist17.inf.santiago.usm.cl #Ip address 10.6.40.157
ssh root@dist18.inf.santiago.usm.cl #Ip address 10.6.40.158
ssh root@dist19.inf.santiago.usm.cl #Ip address 10.6.40.159

